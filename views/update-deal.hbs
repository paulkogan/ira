<form action = "{{postendpoint}}" method = "POST">
<div class="w3-panel w3-pale-blue w3-leftbar
          w3-rightbar w3-border-blue w3-margin-right w3-margin-left">
<br>
<table width = "100%" border = 0>

      <colgroup>
      <col width="30%"/>
      <col width="20%"/>
      <col width="5%"/>
      <col width="20%"/>
      <col width="20%"/>
      </colgroup>



<input type="hidden" value="{{deal.id}}" name="id" />

<tr>
    	<td align="right">
        <b>Deal Name:&nbsp;</b>
    	</td>
      <td align="left" colspan="2">
    	<input type = "text" size = "30"  name = "name" value="{{deal.name}}"><br>
      </td>
      <td></td>
</tr>

<tr>
    	<td align="right">Tax ID:</td>

      <td align="left">
              <input type = "text" name = "taxid" value="{{dealEIN}}">
      </td>
        <td></td>
        <td></td>
</tr>

<tr>
  <td style="min-height:60px;">&nbsp;</td>
  <td></td>
</tr>

<tr>
        <td align="right">Properties' Value:</td>
        <td align="left"><input type = "text" name = "aggregate_value" value={{#formatUSD deal.aggregate_value}}{{/formatUSD}}><br></td>
        <td></td>
          <td align="right">Properties' Debt/Loan:</td>
        <td align="left"><input type = "text" name = "aggregate_debt" value={{#formatUSD deal.aggregate_debt}}{{/formatUSD}}><br></td>
</tr>

  <tr>
    <td align="right">Deal Cash and Assets:</td>
    <td align="left"><input type = "text" name = "cash_assets" value={{#formatUSD deal.cash_assets}}{{/formatUSD}}></td>
    <td></td>
    <td align="right">Deal Debt/Loan:</td>
    <td align="left"><input type = "text" name = "deal_debt" value={{#formatUSD deal.deal_debt}} {{/formatUSD}}></td>
  </tr>

  <tr>

    <td align="right">Asset Value:</td>
    <td align="left">{{#formatUSD deal.total_assets}}{{/formatUSD}}</td>
    <td></td>
    <td align="right">Total Debt: </td>
    <td align="left">{{#formatUSD deal.total_debt}}{{/formatUSD}}</td>
  </tr>

  <tr>
    <td align="right">Equity Value&nbsp;</td>
    <td>{{#formatUSD deal.deal_equity_value}}{{/formatUSD}}</td>
    <td></td>
  </tr>

    <tr>
      <td align="right">Deal Notes:</td>
      <td colspan="3"> <textarea name = "notes" cols="40" rows="2">{{deal.notes}}</textarea> </td>
      <td></td>
    </tr>

<tr>
    	<td></td>
      <td></td>
      <td></td>
      <td align="right">
         <input type = "submit" value = "Submit">
      </td>
<tr>

</form>

</table>

