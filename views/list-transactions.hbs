<div class="w3-panel w3-pale-blue w3-leftbar
 w3-rightbar w3-topbar w3-border-blue w3-margin-right w3-margin-left">

<form action = "{{postendpoint}}" method = "POST" id="filter">



<table width = "100%" border = 0>

  <colgroup>
  <col width="30%"/>
  <col width="10%"/>
  <col width="30%"/>
  <col width="10%"/>
  <col width="20%"/>
  </colgroup>


<tr>
        <td>
              <font family = 'courier' size='5'><b>IRA</b> - Transactions List</font>
        </td>
        <td></td>
        <td></td>
        <td></td>
        <td align = "right">
                <a href = '/updateuser'>{{userObj.firstname}}</a>&emsp;<img width='50' src={{userObj.photo}}>
        </td>
</tr>

<tr>
      <td align = "left">
      <a href = "/">Home</a>&emsp;
      </td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
</tr>

<tr>
        <td>

                > {{message}}
        </td>

        <td>Filter for:</td>
        <td>
                 <select name="filter_ent">


                  {{#ifEqual selectedEntity.id 0}}
                        <option selected disabled value> -- select entity to Filter -- </option>
                  {{else}}
                         <option selected value='{{selectedEntity.id}}'> {{selectedEntity.name}}</option>
                  {{/ifEqual}}


                  {{#each filterList}}
                        <option value='{{id}}'>{{name}}</option>
                  {{/each}}
                  </select>
        </td>
        <td align = "left"><button type="submit" form="filter">Filter</button></td>
        <td align = "center">
                  <a href = '/download_csv/{{selectedEntity.id}}'><img width="45" src = "../static/excel-logo-icon.png"><br>Download</a>
        </td>

</tr>
</table>
<br>
</div>



{{#if transactions}}
{{#each transactions}}
<div class="w3-panel w3-pale-blue w3-leftbar
 w3-rightbar w3-border-blue w3-margin-right w3-margin-left">

  <table width = "100%" border = 0>
  <tr><td>
    <table width = "100%" border = 0>
        <colgroup>
        <col width="5%"/>
        <col width="20%"/>
        <col width="30%"/>
        <col width="14%"/>
        <col width="15%"/>
        <col width="10%"/>
        <col width="5%"/>
        </colgroup>


      <tr>
          <td align="left">{{id}}</td>
          <td align="left"><b>{{investor_name}}</b></td>
          <td>
            <table width = "100%" border = 0>
              <tr><td>{{investment_name}}</td></tr>
              <tr><td>{{passthru_name}}</td></tr>
            </table>

          </td>
          <td>{{tt_name}}</td>
          <td align="center">
              {{t_wired_date}}
          </td>


          <td align="center">
                   {{#ifEqual t_own_adj 0}}
                                   {{#ifLessThan t_amount 0}}
                                       <font color = "red">
                                             {{#formatUSD t_amount}}{{/formatUSD}}
                                       </font>
                                   {{else}}
                                               {{#formatUSD t_amount}}{{/formatUSD}}&nbsp;
                                   {{/ifLessThan}}

                  {{else}}
                        {{t_own_adj}}%
                  {{/ifEqual}}


            </td>

               <td>
                 {{#if can_delete}}
                      <a href = "/deletetransaction/{{id}}">Del.</a>
                 {{/if}}
               </td>

      </tr>
 </table>
</td></tr>


<tr>


  <td align="left">
 &emsp;&emsp;&emsp;&nbsp;&nbsp;Notes: &nbsp;{{t_notes}}
